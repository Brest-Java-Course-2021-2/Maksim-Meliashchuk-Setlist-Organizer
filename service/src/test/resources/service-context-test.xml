<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="namedParameterJdbcTemplate" class="org.springframework.jdbc.core.namedparam.NamedParameterJdbcTemplate">
        <constructor-arg ref="dataSource"/>
    </bean>

    <bean id="bandDtoDao" class="com.epam.brest.dao.BandDtoDaoJdbcImpl">
        <constructor-arg ref="namedParameterJdbcTemplate"/>
    </bean>

    <bean id="bandDtoService" class="com.epam.brest.service.impl.BandDtoServiceImpl">
        <constructor-arg name="bandDtoDao" ref="bandDtoDao"/>
    </bean>

    <bean id="bandDao" class="com.epam.brest.dao.BandDaoJdbcImpl">
        <constructor-arg ref="namedParameterJdbcTemplate"/>
    </bean>

    <bean id="bandService" class="com.epam.brest.service.impl.BandServiceImpl">
        <constructor-arg name="bandDao" ref="bandDao"/>
    </bean>



    <bean name="trackDtoDao" class="com.epam.brest.dao.TrackDtoDaoJdbcImpl">
        <constructor-arg ref="namedParameterJdbcTemplate"/>
    </bean>

    <bean id="trackDtoService" class="com.epam.brest.service.impl.TrackDtoServiceImpl">
        <constructor-arg name="trackDtoDao" ref="trackDtoDao"/>
    </bean>

    <bean id="trackDao" class="com.epam.brest.dao.TrackDaoJdbcImpl">
        <constructor-arg ref="namedParameterJdbcTemplate"/>
    </bean>

    <bean id="trackService" class="com.epam.brest.service.impl.TrackServiceImpl">
        <constructor-arg name="trackDao" ref="trackDao"/>
    </bean>

    <bean class="org.springframework.context.support.PropertySourcesPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath*:test-db.properties</value>
                <value>classpath*:sql-band.properties</value>
                <value>classpath*:sql-track.properties</value>
            </list>
        </property>
    </bean>

</beans>